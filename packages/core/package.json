{
  "name": "@specmind/core",
  "version": "0.3.3",
  "description": "Core code analysis and architecture generation for SpecMind using tree-sitter",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && pnpm copy-patterns",
    "copy-patterns": "mkdir -p dist/analyzer/patterns && cp src/analyzer/patterns/*.json dist/analyzer/patterns/",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "validate-diagrams": "node scripts/validate-diagrams.mjs",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "specmind",
    "architecture",
    "code-analysis",
    "tree-sitter",
    "ast",
    "typescript",
    "javascript",
    "python"
  ],
  "author": "SpecMind",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/specmind/specmind.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "@specmind/format": "workspace:^",
    "minimatch": "^10.0.3",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
