{
  "name": "specmind",
  "version": "0.1.10",
  "description": "CLI for SpecMind - AI-powered architecture documentation",
  "type": "module",
  "bin": {
    "specmind": "./dist/index.js"
  },
  "files": [
    "dist",
    "assistants"
  ],
  "scripts": {
    "prebuild": "node scripts/copy-assistants.mjs",
    "build": "tsc",
    "test": "vitest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "node scripts/copy-assistants.mjs && pnpm build"
  },
  "keywords": [
    "specmind",
    "architecture",
    "documentation",
    "mermaid",
    "cli",
    "code-analysis",
    "tree-sitter",
    "typescript",
    "javascript",
    "python"
  ],
  "author": "SpecMind",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/specmind/specmind.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@specmind/core": "workspace:^",
    "@specmind/format": "workspace:^",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "ignore": "^7.0.5",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
